{
  "name": "lovesick-blog-podcast",
  "version": "1.0.0",
  "description": "Blog on living with chronic disease",
  "main": "server.js",
  "scripts": {
    "webpack": "webpack --progress --colors",
    "webpack-server": "webpack-dev-server --progress --content-base build/ --hot",
    "start": "npm run watch & babel-node server.js",
    "watch": "parallelshell 'npm run watch:css' 'npm run watch:js' 'npm run watch:css-admin' 'npm run watch:js-admin' 'npm run watch:css-login' 'npm run watch:js-login'",
    "watch:css": "watch 'npm run build:css' ./src/scss/blog",
    "watch:js": "watchify ./src/js/client/app.js --extension=.jsx -t babelify -o ./build/app.js -v",
    "watch:css-admin": "watch 'npm run build:css-admin' ./src/scss/admin",
    "watch:js-admin": "watchify ./src/js/client/admin.js --extension=.jsx -t babelify -o ./build/admin/app.js -v",
    "watch:css-login": "watch 'npm run build:css-login' ./src/scss/login",
    "watch:js-login": "watchify ./src/js/client/login.js -t babelify -o ./build/admin/login/app.js -v",
    "build:css": "node-sass ./src/scss/blog/style.scss ./build/style.css; postcss -u autoprefixer -o ./build/style.css ./build/style.css; csso ./build/style.css ./build/style.css",
    "build:js": "browserify ./src/js/client/app.js --extension=.jsx -t babelify -t uglifyify -o ./build/app.js",
    "build:css-admin": "node-sass ./src/scss/admin/style.scss ./build/admin/style.css; postcss -u autoprefixer -o ./build/admin/style.css ./build/admin/style.css; csso ./build/admin/style.css ./build/admin/style.css",
    "build:js-admin": "browserify ./src/js/client/admin.js --extension=.jsx -t babelify -t uglifyify -o ./build/admin/app.js",
    "build:css-login": "node-sass ./src/scss/login/style.scss ./build/admin/login/style.css; postcss -u autoprefixer -o ./build/admin/login/style.css ./build/admin/login/style.css; csso ./build/admin/login/style.css ./build/admin/login/style.css",
    "build:js-login": "browserify ./srcy/js/client/login.js -t babelify -t uglifyify -o ./build/admin/login/app.js -v",
    "test": "mocha --compilers js:babel/register --reporter nyan './src/js/**/test.js'",
    "postinstall": "npm run ignores; npm run build:css; npm run build:js; npm run build:css-admin; npm run build:js-admin",
    "ignores": "echo 'node_modules' > .gitignore; echo '.DS_Store' >> .gitignore; echo 'build' >> .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmagnantb/lovesick-blog-podcast.git"
  },
  "author": "Ben Magnant Brown",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bmagnantb/lovesick-blog-podcast/issues"
  },
  "homepage": "https://github.com/bmagnantb/lovesick-blog-podcast",
  "dependencies": {
    "alt": "^0.16.10",
    "autoprefixer": "^5.2.0",
    "babel": "^5.6.3",
    "babel-core": "^5.8.22",
    "babel-loader": "^5.3.2",
    "babelify": "^6.1.2",
    "bluebird": "^2.9.30",
    "browserify": "^10.2.4",
    "chai": "^3.2.0",
    "chai-as-promised": "^5.1.0",
    "chai-things": "^0.2.0",
    "config": "^1.14.0",
    "csso": "^1.3.11",
    "express": "^4.13.0",
    "express-session": "^1.11.3",
    "iso": "^4.1.0",
    "jsdom": "^3.1.2",
    "lodash": "^3.9.3",
    "marked": "^0.3.3",
    "mocha": "^2.2.5",
    "mongodb": "^2.0.39",
    "node-sass": "^3.2.0",
    "parallelshell": "^1.1.1",
    "passport": "^0.2.2",
    "passport-http": "^0.2.2",
    "passport-local": "^1.0.0",
    "piping": "^0.1.8",
    "postcss-cli": "^1.3.1",
    "react": "^0.13.3",
    "react-hot-loader": "^1.2.8",
    "react-router": "^0.13.3",
    "rx": "^2.5.3",
    "superbird": "^1.0.3",
    "uglifyify": "^3.0.1",
    "watch": "^0.16.0",
    "watchify": "^3.2.2",
    "webpack": "^1.11.0",
    "webpack-dev-server": "^1.10.1"
  }
}
