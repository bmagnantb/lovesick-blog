{
  "name": "lovesick-blog-podcast",
  "version": "1.0.0",
  "description": "Blog on living with chronic disease",
  "main": "server.js",
  "scripts": {
    "start": "npm run watch & babel-node server.js",
    "watch": "parallelshell 'npm run watch:css' 'npm run watch:js'",
    "watch:css": "watch 'npm run build:css' ./src/scss",
    "watch:js": "watchify ./src/js/client/app.js --extension=.jsx -t babelify -o ./build/app.js -v",
    "build:css": "node-sass ./src/scss/style.scss ./build/style.css; postcss -u autoprefixer -o ./build/style.css ./build/style.css; csso ./build/style.css ./build/style.css",
    "build:js": "browserify ./src/js/app.js --extension=.jsx -t babelify -t uglifyify -o ./build/app.js",
    "test": "mocha --compilers js:babel/register ./src/test/*.js",
    "postinstall": "npm run ignores; npm run build:css; npm run build:js",
    "ignores": "echo 'node_modules' > .gitignore; echo '.DS_Store' >> .gitignore; echo 'build' >> .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmagnantb/lovesick-blog-podcast.git"
  },
  "author": "Ben Magnant Brown",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bmagnantb/lovesick-blog-podcast/issues"
  },
  "homepage": "https://github.com/bmagnantb/lovesick-blog-podcast",
  "dependencies": {
    "alt": "^0.16.10",
    "autoprefixer": "^5.2.0",
    "babel": "^5.6.3",
    "babelify": "^6.1.2",
    "bluebird": "^2.9.30",
    "browserify": "^10.2.4",
    "chai": "^3.0.0",
    "config": "^1.14.0",
    "csso": "^1.3.11",
    "express": "^4.13.0",
    "iso": "^4.1.0",
    "lodash": "^3.9.3",
    "mocha": "^2.2.5",
    "mongodb": "^2.0.35",
    "node-sass": "^3.2.0",
    "parallelshell": "^1.1.1",
    "piping": "^0.1.8",
    "postcss-cli": "^1.3.1",
    "react": "^0.13.3",
    "react-router": "^0.13.3",
    "superbird": "^1.0.3",
    "uglifyify": "^3.0.1",
    "watch": "^0.16.0",
    "watchify": "^3.2.2"
  }
}
